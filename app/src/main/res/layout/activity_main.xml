<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:paddingRight="20dp"
    tools:context=".MainActivity">

    <!-- Contenedor para el texto principal, centrado verticalmente -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/tv_oye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="oye"
            android:textColor="@color/primary_text_color"
            android:textSize="40dp"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            android:fontFamily="@font/baloo_thambi_2"/>

        <TextView
            android:id="@+id/tv_sabias_que"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Sabías que..."
            android:textColor="@color/accent_text_color"
            android:textSize="50dp"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/baloo_thambi_2"/>

        <TextView
            android:id="@+id/tv_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esos gastos hormiga son los que tienen mayor impacto en tu bolsillo?"
            android:textColor="@color/primary_text_color"
            android:textSize="32dp"
            android:layout_marginTop="12dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:fontFamily="@font/baloo_thambi_2"/>

    </LinearLayout>

    <!-- Botón personalizado en la parte inferior derecha -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_sigamos"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_background_rounded"
        android:clickable="true"
        android:focusable="true"
        android:minWidth="150dp"
        android:paddingHorizontal="24sp"
        android:paddingVertical="6dp">

        <TextView
            android:id="@+id/btn_sigamos_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_thambi_2"
            android:text="Sigamos"
            android:textColor="@color/button_text_color"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/btn_sigamos_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_thambi_2"
            android:text=">"
            android:textColor="@color/button_text_color"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>
