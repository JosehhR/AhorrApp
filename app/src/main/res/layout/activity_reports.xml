<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".LoginActivity">

    <!-- Header -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardBackgroundColor="#1A0A4A"
        app:cardElevation="0dp"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AhorrApp"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tus reportes"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Contenedor de tarjetas -->
    <ScrollView
        android:id="@+id/scroll_cards"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header_view"
        app:layout_constraintBottom_toTopOf="@id/bottom_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/cards_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <!-- Tarjeta 1 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_gastos"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#75E6DA"
                android:clickable="true"
                android:focusable="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="93dp"
                        android:layout_height="100dp"
                        android:scaleType="fitCenter"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/imagen1" />

                    <TextView
                        android:id="@+id/txtTitulo1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Informe de gastos"
                        android:textColor="#3B7370"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toEndOf="@id/imageView1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/txtDescripcion1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Aquí controlarás toda la información de tus gastos"
                        android:textColor="#3B7370"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@id/txtTitulo1"
                        app:layout_constraintTop_toBottomOf="@id/txtTitulo1"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta 2 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_hormiga"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#C1FBA4"
                android:clickable="true"
                android:focusable="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="93dp"
                        android:layout_height="100dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/imagen2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/txtTitulo2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Gastos hormiga y vampiro"
                        android:textColor="#619B52"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toEndOf="@id/imageView2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/txtDescripcion2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Aquí encontrarás la información de tus gastos hormiga y vampiro"
                        android:textColor="#619B52"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@id/txtTitulo2"
                        app:layout_constraintTop_toBottomOf="@id/txtTitulo2"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta 3 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_historial"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#C3B1E1"
                android:clickable="true"
                android:focusable="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="93dp"
                        android:layout_height="100dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/imagen3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/txtTitulo3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Historial de gastos"
                        android:textColor="#73629E"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toEndOf="@id/imageView3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/txtDescripcion3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Aquí encontrarás a detalle tus gastos"
                        android:textColor="#73629E"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@id/txtTitulo3"
                        app:layout_constraintTop_toBottomOf="@id/txtTitulo3"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta 4 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_deudas"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FF9AA2"
                android:clickable="true"
                android:focusable="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="93dp"
                        android:layout_height="100dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/imagen4"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/txtTitulo4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Informe de deudas"
                        android:textColor="#B25C61"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toEndOf="@id/imageView4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/txtDescripcion4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Aquí encontrarás la información de tus deudas"
                        android:textColor="#B25C61"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@id/txtTitulo4"
                        app:layout_constraintTop_toBottomOf="@id/txtTitulo4"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- Menú inferior -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#D9D9D9"
        app:itemIconTint="#6D6D6D"
        app:itemTextColor="#898989"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
